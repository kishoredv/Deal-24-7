<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @deal.name %>
</p>

<p>
  <b>Description:</b>
  <%= @deal.description %>
</p>

<p>
  <b>Image:</b>
  <%= image_tag(@deal.image_url) if @deal.image? %>
</p>

<p>
  <b>Price:</b>
  <%= @deal.price %>
</p>

<p>
  <b>Offers:</b>
  <%= @deal.offers %>
</p>

<%= gmaps4rails(@map) %>
<%= yield :scripts %>

<p>
  <b>Address:</b>
  <%= @deal.address %>
</p>

<% if is_admin? %>
  <%= link_to 'Edit', edit_deal_path(@deal) %> |

<% end %>
<%= link_to 'Back', deals_path %>
